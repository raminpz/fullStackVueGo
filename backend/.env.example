# ==================== CONFIGURACIÓN DEL SERVIDOR ====================
# Puerto en el que se ejecutará el servidor backend
PORT=8081

# ==================== CONFIGURACIÓN DE BASE DE DATOS ====================
# Nombre de la base de datos MySQL
DB_NAME=go_fullstack

# Usuario de MySQL
DB_USER=root

# Contraseña del usuario de MySQL
DB_PASSWORD=rami123

# Servidor/host de MySQL (localhost o IP del servidor)
DB_SERVER=localhost

# Puerto de MySQL (por defecto 3306)
DB_PORT=3306

# ==================== CONFIGURACIÓN DE SEGURIDAD ====================
# Clave secreta para firmar los tokens JWT
# ⚠️ IMPORTANTE: Usa una clave segura y aleatoria en producción
# Genera una con: openssl rand -base64 32
SECRET_JWT=genera_una_clave_aleatoria_segura

# ==================== CONFIGURACIÓN DE CORREO SMTP ====================
# Host del servidor SMTP (para Gmail: smtp.gmail.com)
SMTP_HOST=smtp.gmail.com

# Puerto del servidor SMTP (587 para TLS, 465 para SSL)
SMTP_PORT=587

# Usuario/correo que enviará los emails
SMTP_USER=tu_correo@gmail.com

# Contraseña del correo (para Gmail, usa una contraseña de aplicación)
# Genera una en: https://myaccount.google.com/apppasswords
SMTP_PASSWORD=tu_password_de_aplicacion

# Email que aparecerá como remitente
SMTP_FROM_EMAIL=noreply@example.com

# ==================== CONFIGURACIÓN DEL FRONTEND ====================
# URL del frontend para enlaces de verificación de cuenta
RUTA_FRONTEND=http://localhost:3000


